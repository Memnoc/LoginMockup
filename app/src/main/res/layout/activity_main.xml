<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity"
    tools:layout_editor_absoluteY="81dp">


    <TextView
        android:id="@+id/header_txt_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/login_page"
        android:textAlignment="viewStart"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/name_txt_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="@string/username"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/header_txt_main"
        app:layout_constraintTop_toBottomOf="@+id/header_txt_main" />


    <EditText
        android:id="@+id/psw_txt_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/surname_txt_main"
        app:layout_constraintTop_toBottomOf="@+id/surname_txt_main"
        tools:text="password" />


    <Button
        android:id="@+id/sign_btn_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:enabled="false"
        android:text="@string/sign_in"
        android:textAllCaps="true"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/age_txt_main"
        app:layout_constraintTop_toBottomOf="@+id/age_txt_main" />

    <EditText
        android:id="@+id/gender_txt_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:hint="@string/gender"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/psw_txt_main"
        app:layout_constraintTop_toBottomOf="@+id/psw_txt_main" />

    <EditText
        android:id="@+id/age_txt_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:hint="@string/age"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/gender_txt_main"
        app:layout_constraintTop_toBottomOf="@+id/gender_txt_main" />

    <EditText
        android:id="@+id/surname_txt_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="@string/surname"
        app:layout_constraintStart_toStartOf="@+id/name_txt_main"
        app:layout_constraintTop_toBottomOf="@+id/name_txt_main" />


</android.support.constraint.ConstraintLayout>